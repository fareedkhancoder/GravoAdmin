<?xml version="1.0" encoding="utf-8"?>
<!-- Defines the background for the Button using a selector for different states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#005cb2" /> <!-- A darker shade for the pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default, non-pressed state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Uses the primary color of your app -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
